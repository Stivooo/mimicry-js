{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": [],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/*.ts"],
  "exclude": ["src/*.test.ts", "node_modules", "dist"]
}
